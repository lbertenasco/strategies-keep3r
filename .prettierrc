{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 145,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": ["**.ts", "**.js"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "useTabs": false,
        "endOfLine": "auto"
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 200
      }
    }
  ]
}
